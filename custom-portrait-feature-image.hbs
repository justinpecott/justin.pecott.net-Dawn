{{!< default}}

<main class="site-main">

    {{#post}}
        {{> "content" width="portrait"}}
    {{/post}}

    {{#is "post"}}
        {{#if @custom.show_related_posts}}
            {{> "related-posts"}}
        {{/if}}

        {{#post}}
            {{> "comments"}}
        {{/post}}
    {{/is}}

</main>